{
    "version": 2,
    "builds": [
      {
        "src": "src/app.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["node_modules/**", "src/**/*.ts"],
          "excludeFiles": ["src/tests/**", "*.test.ts", "jest.config.js", "babel.config.json"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/src/app.ts",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      }
    ]
  }
  