{
  "compilerOptions": {
    "target": "es2022",           // Soporte para decoradores modernos y Top-Level Await
    "module": "esnext",           // Usa m√≥dulos ES
    "moduleResolution": "node",
    "experimentalDecorators": true, // Activa los decoradores experimentales
    "emitDecoratorMetadata": true, // Genera metadatos para los decoradores
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ""
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules", "tests/**", "*.test.ts", "jest.config.js", "babel.config.json", "tests/*.test.ts", "tests", "tests/setup.ts", "tests/turnos.test.ts"]
}
