{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "preserve",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "src/firebaseConfig.ts", "src/app.ts"],
  "exclude": ["node_modules", "tests/**", "*.test.ts", "jest.config.js", "babel.config.json", "tests/*.test.ts", "tests", "tests/setup.ts", "tests/turnos.test.ts"]
}
